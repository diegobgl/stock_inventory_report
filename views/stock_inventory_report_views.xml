<odoo>
    <!-- Definición de la Vista de Lista -->
    <record id="view_stock_inventory_report_tree" model="ir.ui.view">
        <field name="name">stock.inventory.report.tree</field>
        <field name="model">stock.inventory.report</field>
        <field name="arch" type="xml">
            <tree string="Reporte de Inventario a Fecha">
                <field name="product_id"/>
                <field name="location_id"/>
                <field name="quantity"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <!-- Incluir el Componente OWL en la vista de acción o tablero -->
    <record id="action_stock_inventory_dashboard" model="ir.actions.client">
        <field name="name">Dashboard de Inventario</field>
        <field name="tag">inventory.InventoryDashboard</field>
    </record>
</odoo>
